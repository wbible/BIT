package thread;

import java.awt.Button;
import java.awt.Dimension;
import java.awt.Frame;
import java.awt.Toolkit;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
import java.util.Scanner;

public class RunRace extends Frame{
	private static final int FRAME_WIDTH = 600;
	private static final int FRAME_HEIGHT = 500;
	private static final int BTN_WIDTH = 150;
	private static final int BTN_HEIGHT = 40;
	private static final int GAP = 10;
	
	private int count;
	private String[] name;
	
	private Button btn;
	
	public RunRace(int count, String[] name) {
		this.count = count;
		this.name = name;
		btn = new Button("출발");
		btn.setBounds(FRAME_WIDTH - BTN_WIDTH - GAP, FRAME_HEIGHT - BTN_HEIGHT - GAP, BTN_WIDTH, BTN_HEIGHT);
		add(btn);
		
		Dimension screen = Toolkit.getDefaultToolkit().getScreenSize();
		setBounds((int) ((screen.getWidth() - FRAME_WIDTH) / 2), (int) ((screen.getHeight() - FRAME_HEIGHT) / 2),
				FRAME_WIDTH, FRAME_HEIGHT);
		setResizable(false);
		setTitle("경마 게임");
		addWindowListener(new WindowAdapter() {
			@Override
			public void windowClosing(WindowEvent e) {
				System.exit(0);
			}
		});
		
		
		setLayout(null);
		setVisible(true);
	}

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.print("경주마 수 : ");
		int count = scan.nextInt();
		scan.nextLine();
		
		String[] name = new String[count];
		for (int i =0; i < count; i++) {
			System.out.print((i+1) + "번째 경주마 이름 입력 : ");
			name[i] = scan.nextLine();
		}
		
		new RunRace(count, name);
	}
}
